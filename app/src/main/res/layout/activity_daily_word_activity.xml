<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_tertiary"
    tools:context=".DailyWordActivity">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbars="vertical"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/daily_word_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/draft_title_margin"
                android:textColor="@color/color_standard_text"
                android:gravity="center"
                android:textSize="@dimen/draft_title_size"/>

            <TextView
                android:id="@+id/daily_word_definition"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:textColor="@color/color_standard_text"
                android:textSize="@dimen/draft_text_size"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>